<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    android:id="@+id/branch_live1"
    android:elevation="2dp"
    android:clickable="true"
    android:background="@drawable/shadow"
    android:layout_marginRight="15dp">
    <RelativeLayout
        android:id="@+id/branch_live"
        android:layout_width="380dp"
        android:layout_marginStart="5dp"
        android:layout_marginRight="5dp"
        android:layout_height="80dp">

        <!--        <ImageView-->
        <!--            xmlns:app="http://schemas.android.com/apk/res-auto"-->
        <!--            android:id="@+id/alumni_friends_image"-->
        <!--            android:layout_width="wrap_content"-->
        <!--            android:layout_height="match_parent"-->
        <!--            android:layout_marginTop="15dp"-->
        <!--            android:layout_marginLeft="15dp"/>-->
        <!--        <com.theophrast.ui.widget.SquareImageView-->
        <!--            android:id="@+id/alumni_friends_image"-->
        <!--            android:layout_width="130dp"-->
        <!--            android:layout_height="0dp"-->
        <!--            android:layout_marginTop="10dp"-->
        <!--            android:layout_marginLeft="10dp"-->
        <!--            app:hwRatio="0.6" />-->
        <ImageView
            android:id="@+id/live_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="7dp"
            android:src="@drawable/dummy"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:id="@+id/live_topic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@id/live_image"
            android:text="Topic"
            android:textSize="12sp"
            android:textColor="#1A1919" />

        <TextView
            android:id="@+id/layout_friends_batch_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/live_topic"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="4dp"
            android:textColor="#1A1919"
            android:textSize="12sp"
            android:layout_toRightOf="@id/live_image"
            android:text="Subject  -" />

        <TextView
            android:id="@+id/gec_live_subject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/live_topic"
            android:layout_marginLeft="90dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="4dp"
            android:textColor="#1A1919"
            android:textSize="12sp"
            android:layout_toRightOf="@id/live_image"
            android:text="Subject" />

        <TextView
            android:id="@+id/layout_friends_designation_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/gec_live_subject"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="4dp"
            android:textColor="#1A1919"
            android:layout_toRightOf="@id/live_image"
            android:text="Starts At  -"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/live_started"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/gec_live_subject"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="4dp"
            android:textColor="#1A1919"
            android:layout_toRightOf="@id/live_image"
            android:text="Start At"
            android:textSize="12sp"/>
        <TextView
            android:id="@+id/video_started"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Not Started yet"
            android:layout_marginLeft="260dp"
            android:layout_marginTop="5dp"
            android:textColor="#E72626"
            android:textSize="10sp" />
            </RelativeLayout>
       <RelativeLayout
           android:id="@+id/layout_no_live_class"
           android:layout_width="380dp"
           android:layout_marginStart="5dp"
           android:layout_marginRight="5dp"
           android:visibility="gone"
           android:layout_height="80dp">

           <TextView
               android:id="@+id/txt_noliveclass"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="No Live Classes Today"
               android:layout_marginTop="5dp"
               android:textColor="#111"
               android:layout_centerInParent="true"
               android:textSize="20sp" />
       </RelativeLayout>

</RelativeLayout>
