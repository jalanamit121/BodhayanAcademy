<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:id="@+id/branch_live1"
    android:elevation="3dp"
    android:background="@drawable/shadow"
    >
    <RelativeLayout
        android:id="@+id/branch_sem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/live_image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/ic_chat"
            android:layout_marginLeft="10dp"/>

        <ImageView
            android:id="@+id/image_profile"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:visibility="gone"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/ic_user"
            android:layout_toRightOf="@id/live_image"/>

        <TextView
            android:id="@+id/notification_sender"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_toRightOf="@id/live_image"
            android:layout_below="@id/image_profile"
            android:text="sender name"
            android:textColor="@color/edit_text"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/notification_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="message"
            android:layout_toRightOf="@id/live_image"
            android:layout_below="@id/notification_sender"
            android:layout_marginStart="10dp"
            android:textColor="#8EC3CF"
            android:textSize="16sp" />
        <TextView
            android:id="@+id/notification_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="message"
            android:layout_toRightOf="@id/live_image"
            android:layout_below="@id/notification_message"
            android:layout_marginStart="10dp"
            android:textColor="@color/edit_text"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="20dp"
            android:gravity="end"
            android:textSize="14sp" />





    </RelativeLayout>



</RelativeLayout>
